{
    "title": "Switch Enlgish, Korean",
    "rules": [
        {
            "description": "Use right command to toggle input source between English and Korean",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command"
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "language": "^en$"
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "language": "^ko$"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command"
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "language": "^ko$"
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "language": "^en$"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
